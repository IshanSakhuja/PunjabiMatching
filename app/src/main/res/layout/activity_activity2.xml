<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    >
    <TextView android:textSize="30sp" android:textStyle="bold" android:gravity="center" android:id="@+id/textView21" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/underline"/>
    <TextView android:textSize="40sp" android:textStyle="bold" android:gravity="center" android:id="@+id/textView22" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="TextView"/>
    <TextView android:textSize="24sp" android:textStyle="bold" android:gravity="center" android:id="@+id/textView23" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="सपने देखे पर पाने के लिए अपना सर्वश्रेठ करे।"/>
    <TextView android:textSize="18sp" android:gravity="center" android:id="@+id/textView24" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="बनाने वाला -  इशान"/>
    <TextView android:textSize="18sp" android:gravity="center" android:id="@+id/textView25" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:text="ishan.sakhuja.16@gmail.com"/>
    <TextView android:gravity="center" android:layout_gravity="center" android:id="@+id/textView40" android:paddingTop="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Classical Music - Srivastava"/>
    <Button android:textSize="18sp" android:gravity="center" android:id="@+id/button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:text="आगे बढ़े" android:onClick="buclick"/>
    <LinearLayout android:gravity="bottom" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:gravity="center" android:id="@+id/textView26" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="This app is for free distibution only(Not for Sale)."/>
    </LinearLayout>
</LinearLayout>
